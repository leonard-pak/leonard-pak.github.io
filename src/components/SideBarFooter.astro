---
import { getCollection } from "astro:content";

import type { SocialSchema } from "@content/config";
import Icon from "./Icon.astro";

const socials = (await getCollection("social")).map(
    ({ data }) => data as SocialSchema,
);
---

<div
    class="block sticky pointer-events-none bottom-10 bg-base-200 justify-center h-12 [mask-image:linear-gradient(transparent,#000000)]"
>
</div>

<div
    class="social-icons px-4 pb-5 pt-1 flex self-center justify-center sticky bottom-0 bg-base-200"
>
    {
        socials.map(({ name, icon, url }) => (
            <a
                href={url}
                target="_blank"
                class="mx-3"
                aria-label={name}
                title={name}
            >
                <Icon name={icon} size={24} />
            </a>
        ))
    }

    <a
        href="/rss.xml"
        target="_blank"
        class="mx-3"
        aria-label="RSS Feed"
        title="RSS Feed"
    >
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            style="fill: currentColor;transform: ;msFilter:;"
            ><path
                d="M19 20.001C19 11.729 12.271 5 4 5v2c7.168 0 13 5.832 13 13.001h2z"
            ></path><path
                d="M12 20.001h2C14 14.486 9.514 10 4 10v2c4.411 0 8 3.589 8 8.001z"
            ></path><circle cx="6" cy="18" r="2"></circle>
        </svg>
    </a>
</div>
