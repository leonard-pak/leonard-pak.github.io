---
import ui from "@lib/ui";

interface Props {
    sideBarActiveItemID: keyof typeof ui;
}

const { sideBarActiveItemID } = Astro.props;
---

<ul class="menu grow shrink menu-md overflow-y-auto gap-1">
    {
        Object.keys(ui).map((id) => (
            <li>
                <a
                    class:list={[
                        "py-2.5 text-base",
                        sideBarActiveItemID === id && "bg-base-300", // For primary color replace with `active` class
                    ]}
                    href={ui[id].url}
                >
                    {ui[id].name}
                </a>
            </li>
        ))
    }
</ul>
